                android:layout_margin="0.5dp"
                android:text="뇌굴계산학부" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_margin="0.5dp"
                android:gravity="center"
                android:text="전필" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_margin="0.5dp"
                android:gravity="center"
                android:text="3" />
            <TextView
                android:id="@+id/compare_coins_grade_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_margin="0.5dp"
                android:text=" A+" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
