                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_margin="0.5dp"
                android:text="같은 그림 찾기" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_margin="0.5dp"
                android:text="뇌굴지각학부" />
